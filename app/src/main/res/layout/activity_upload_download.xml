<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:fillViewport="true"
    tools:context=".Upload">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="14">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:contentDescription="TODO" />

        <LinearLayout
            android:id="@+id/image_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Take photo"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/from_galary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_weight="2"
                android:text="gallery"
                android:textColor="#000"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="7">

            <EditText
                android:id="@+id/Number_of_rooms"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="Number of rooms and Bathrooms"
                android:textAlignment="center"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/flat_rent"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="Rent per Month"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/House_Number"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="House Number"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/location_extract"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="LOCATION"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sector_location"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="sector location.like kachabazar"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/house_owner_name"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="House Owner name"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/house_owner_phone_number"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:autofillHints="House Owner phone Number"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="House Owner phone Number"
                android:inputType="number"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="TextFields" />


        </LinearLayout>

        <EditText
            android:id="@+id/flat_description"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:autofillHints=""
            android:background="@drawable/stroke_shape_ractangle"
            android:hint="Description"
            android:inputType="text"
            android:maxLength="350"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/upload_to_database"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:background="@drawable/continue_in2nd_acivity_btn"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/back_main"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:background="@drawable/continue_in2nd_acivity_btn"
            android:text="Back"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>