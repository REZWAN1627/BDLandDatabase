<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_dataBase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/edit_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/Number_of_rooms_edit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="Number of rooms and Bathrooms"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/flat_rent_edit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:autofillHints=""
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="Rent per Month"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/House_Number_edit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="House Number"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/location_extract_edit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="LOCATION"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sector_location_edit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="sector location.like kachabazar"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/house_owner_name_edit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="House Owner name"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/house_owner_phone_number_edit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:autofillHints="House Owner phone Number"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="House Owner phone Number"
                android:inputType="number"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/flat_description_edit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="Description"
                android:inputType="text"
                android:maxLength="350"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_search_houseNumber"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:autofillHints="House Owner phone Number"
                android:background="@drawable/stroke_shape_ractangle"
                android:hint="House Number!"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_search_houseNumber_tv"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/stroke_shape_ractangle"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <Button
                android:id="@+id/edit_search"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/continue_in2nd_acivity_btn"
                android:text="Search"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold" />

            <Button
                android:id="@+id/submit"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/continue_in2nd_acivity_btn"
                android:text="Submit"
                android:textAlignment="center"
                android:textColor="#FFFF"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>